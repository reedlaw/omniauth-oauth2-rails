<% if current_user %>
  <h1>User Profile</h1>
  <p>
    <strong>Name:</strong>
    <%= current_user.name %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= current_user.email %>
  </p>
  <p>
    <strong>Provider:</strong>
    <%= current_user.provider %>
  </p>
  <p>
    <strong>OmniAuth UID:</strong>
    <%= current_user.uid %>
  </p>
  <p><%= link_to "Log out", logout_path %></p>
<% else %>
  <h1>Sign In</h1>

  <p><strong>Sign in through one of these services:</strong></p>

  <div class="auth_providers">
    <a href="/auth/alphalogin" class="auth_provider">
      AlphaLogin
    </a><br />
    <a href="/auth/developer" class="auth_provider">
      Developer
    </a><br />
    <a href="/auth/github" class="auth_provider">
      Github
    </a>
  </div>
<% end %>
